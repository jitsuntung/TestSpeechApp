<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_img">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >


        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
             />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtSpeechInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textColor="#603c3c"
        android:textSize="46sp"
        android:textStyle="normal"
        android:text=""/>

    <TextView
        android:layout_below="@+id/txtSpeechInput"
        android:id="@+id/clicktoconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#603c3c"
        android:textSize="33sp"
        android:textStyle="normal"
        android:text=""/>


    <FrameLayout
        android:layout_below="@+id/clicktoconfirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container1"
        android:layout_above="@+id/whocast"
        android:background="@drawable/grid"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/winlosemsg"
        android:layout_alignBottom="@+id/fragment_container1"
        android:layout_alignEnd="@+id/fragment_container1"
        android:layout_alignLeft="@id/fragment_container1"
        android:layout_alignRight="@id/fragment_container1"
        android:layout_alignStart="@id/fragment_container1"
        android:layout_alignTop="@id/fragment_container1"
        />

    <ImageButton
        android:id="@+id/whocast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ponecast"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="90dp"/>

    <ImageButton
        android:id="@+id/replayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="90dp"/>

</RelativeLayout>